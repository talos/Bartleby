<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="8"
      android:versionName="0.1.9"
      package="com.accursedware.bartleby">
	<uses-sdk android:minSdkVersion="4" android:targetSdkVersion="8"/>
	<uses-permission android:name="net.caustic.android.service.PERMISSION" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
    <application android:icon="@drawable/icon"
    			 android:label="@string/app_name"
    			 android:debuggable="@bool/debug">
     	<uses-library android:name="com.google.android.maps" />
     	
        <activity android:name="com.accursedware.bartleby.BartlebyActivity"
                  android:label="@string/app_name"
                  android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service android:name=".TestService">
        	<intent-filter>
        		<action android:name="net.caustic.android.service.REFRESH" />
        	</intent-filter>
        </service>
        
        <!--  copied in from manifest.xml of Caustic Android Library -->
        <activity android:name="net.caustic.android.activity.CausticAndroidActivity"
        		  android:icon="@drawable/icon"
                  android:label="@string/app_name">
           <intent-filter>
                <action android:name="android.intent.action.VIEW" />
         <!--        <category android:name="android.intent.category.LAUNCHER" />-->
            </intent-filter>
        </activity>
        
	    <service 
	    		 android:name="net.caustic.android.service.CausticService">
             <intent-filter>
             	  <action android:name="net.caustic.android.service.REFRESH" />
             	  <action android:name="net.caustic.android.service.REQUEST"  />
             	  <action android:name="net.caustic.android.service.FORCE" />
             	  <data android:scheme="caustic" />
             </intent-filter>
            <!--  <intent-filter>
             	  <action android:name="net.caustic.android.service.REFRESH" />
             	  <action android:name="net.caustic.android.service.FORCE" />
             	  <action android:name="net.caustic.android.service.REQUEST" />
             </intent-filter>-->
        </service>
    </application>
	

</manifest> 