<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layout_root"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:minWidth="300dp"
  android:minHeight="400dp"
  android:orientation="vertical"
  android:padding="5dp">

  <ProgressBar android:id="@+id/progress"
  		style="?android:attr/progressBarStyleHorizontal"
 	  	android:layout_width="fill_parent"
 	  	android:layout_height="4dip"
   />
  <LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:orientation="horizontal"
  	>
	  	<TextView android:id="@+id/owners_header"
		  	android:text="@string/owners_header"
		  	android:textStyle="bold"
		  	android:visibility="gone"
		  	android:layout_height="wrap_content"
		  	android:layout_width="wrap_content"
		  	/>
	  	<TextView android:id="@+id/no_owner"
		  	android:text="@string/no_owner"
		  	android:textStyle="italic"
		  	android:visibility="gone"
		  	android:layout_height="wrap_content"
		  	android:layout_width="wrap_content"
		  	/>
	  	<TextView android:id="@+id/purchase_date"
		  	android:layout_height="wrap_content"
		  	android:layout_width="wrap_content"
		  	android:visibility="gone"
			/>
		<TextView android:id="@+id/purchase_price"
		  	android:layout_height="wrap_content"
		  	android:layout_width="wrap_content"
		  	android:visibility="gone"
			/>	
			
		<TextView android:id="@+id/owners_list"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				/>
  </LinearLayout>
  	
  	
  	<View
        android:layout_height="2dip"
        android:layout_width="fill_parent"
        android:background="#FF909090" />
        
        
   
  <LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:orientation="horizontal"
  	>
	  	<TextView android:id="@+id/lenders_header"
		  	android:text="@string/lenders_header"
		  	android:textStyle="bold"
		  	android:visibility="gone"
		  	android:layout_height="wrap_content"
		  	android:layout_width="wrap_content"
	  		/>
	  	<TextView android:id="@+id/no_lenders"
		  	android:text="@string/no_lenders"
		  	android:textStyle="italic"
		  	android:visibility="gone"
		  	android:layout_height="wrap_content"
		  	android:layout_width="wrap_content"
		  	/>
	  	<TextView android:id="@+id/lenders_list"
	  		android:layout_height="wrap_content"
	  		android:layout_width="fill_parent"
	  		/>
		<TextView android:id="@+id/original_loans_principal"
		  	android:layout_height="wrap_content"
		  	android:layout_width="wrap_content"
		  	android:visibility="gone"
			/>	
  	</LinearLayout>
  	
  	<View
        android:layout_height="2dip"
        android:layout_width="fill_parent"
        android:background="#FF909090" />
    <TextView android:id="@+id/violations_complaints_header"
	  	android:layout_height="wrap_content"
	  	android:layout_width="wrap_content"
	  	android:textStyle="bold"
	  	android:text="@string/violations_complaints_header"
	  	/>
  	<TextView android:id="@+id/complaints_view"
	  	android:layout_height="wrap_content"
	  	android:layout_width="wrap_content"
	  	/>
  	<TextView android:id="@+id/violations_view"
	  	android:layout_height="wrap_content"
	  	android:layout_width="wrap_content"
	  	/>
</LinearLayout>
