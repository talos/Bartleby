<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/master"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<AutoCompleteTextView android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/autocomplete_address"
				android:completionThreshold="@integer/completion_threshold"
				android:inputType="textAutoComplete"
				android:hint="@string/address_hint"
				android:selectAllOnFocus="true"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_above="@+id/mapview"
				android:layout_toLeftOf="@+id/button_lookup">
	 	<requestFocus></requestFocus>
	</AutoCompleteTextView>
	<Button android:text="@string/lookup_button"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" 
			android:id="@+id/button_lookup"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"></Button>
	<com.google.android.maps.MapView android:layout_height="300px"
			android:clickable="true"
			android:id="@+id/mapview"
			android:layout_alignParentBottom="true"
			android:layout_below="@+id/button_lookup"
			android:layout_width="fill_parent"
			android:apiKey="0YJhaf0cmFP2sjDfBz8wbj-Pyp6nJjPzaTBLBow"
			></com.google.android.maps.MapView>
</RelativeLayout>